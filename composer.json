{
    "name": "zenmagick/zenmagick",
    "description": "A reliable, flexible Open Source e-commerce solution for internet retailers of all trades.",
    "license": "GPL-2.0+",
    "homepage": "http://www.zenmagick.org",
    "keywords": ["e-commerce"],
    "authors": [
        {
            "name": "Martin Rademacher",
            "email": "mano@zenmagick.org",
            "homepage": "http://www.radebatz.net",
            "role": "Developer"
        },
        {
            "name": "John Robeson",
            "email": "johnny@localmomentum.net",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "http://dev.zenmagick.org/projects/zenmagick/issues",
        "wiki": "http://dev.zenmagick.org/projects/zenmagick/wiki",
        "forum": "http://forum.zenmagick.org",
        "source": "https://github.com/ZenMagick/ZenMagick.git"
    },
    "autoload": {
        "psr-0": {
            "ZenMagick": "lib/"
        },
        "classmap": ["lib/shared"]
    },
    "minimum-stability": "dev",
    "require": {
        "php": ">=5.3.3",
        "symfony/symfony": "2.1.*",
        "doctrine/doctrine-bundle": "dev-master",
        "doctrine/orm": "2.2.*",
        "doctrine/migrations": "dev-master",
        "doctrine/doctrine-migrations-bundle": "dev-master",
        "rych/phpass": "dev-master",
        "symfony/swiftmailer-bundle": "dev-master",
        "symfony/monolog-bundle": "dev-master",
        "sensio/distribution-bundle": "2.1.*",
        "zenmagick/zencart": "1.3.9-RC8",
        "zenmagick/cachelite": "dev-master",
        "dermanomann/phprules": "dev-master"
    },
    "scripts": {
        "post-install-cmd": [
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile"
        ],
        "post-update-cmd": [
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile"
        ]
    },
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "symfony-app-dir": "app",
        "symfony-web-dir": "web"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "git://github.com/ZenMagick/symfony.git"
        },
        {
            "type": "package",
            "package": {
                "name": "zenmagick/zencart",
                "version": "1.3.9-RC8",
                "source": {
                    "url": "git://github.com/ZenMagick/zc-base.git",
                    "type": "git",
                    "reference": "master"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "dermanomann/phprules",
                "version" : "dev-master",
                "source": {
                    "url": "git://github.com/DerManoMann/phprules.git",
                    "type": "git",
                    "reference": "master"
                },
                "autoload": {
                    "psr-0": {"phprules": "src/"}
                }

            }
        },
        {
            "type": "package",
            "package": {
                "name": "zenmagick/cachelite",
                "version" : "dev-master",
                "source": {
                    "url": "git://github.com/ZenMagick/CacheLite.git",
                    "type": "git",
                    "reference": "master"
                },
                "autoload": {
                    "psr-0": {"pear\\cache": "lib/"}
                }
            }
        }

    ]
}
