#!/usr/bin/env php
<?php
use zenmagick\base\Application;
use zenmagick\base\Runtime;

chdir(dirname(dirname(__FILE__)));
include_once 'lib/base/Application.php';
$application = new Application('prod', true,
  array(
    'enablePlugins' => true,
    'appConfig' => array(dirname(__DIR__).'/config/store-config.yaml'),
    'appContainer' => array(dirname(__DIR__).'/config/store-services.xml', dirname(__DIR__).'/lib/http/container.xml'),
    'settings' => array('zenmagick' => array('bundles' => 'Doctrine\Bundle\DoctrineBundle\DoctrineBundle'));
));
$application->boot();

$container = $application->getContainer();
$pluginService = $container->get('pluginService');
$unitTests = $pluginService->getPluginForId('unitTests');
var_dump(get_class($unitTests));
