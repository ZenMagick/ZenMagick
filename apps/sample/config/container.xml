<?xml version="1.0" ?>

<!-- http container -->
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="templateManager" class="zenmagick\apps\store\themes\TemplateManager" />

        <service id="zmvalidator" class="ZMValidator">
            <call method="load">
                <argument>%kernel.context_dir%/config/validation.yaml</argument>
            </call>

            <tag name="zenmagick.http.view.variable" key="validator" />
        </service>

    </services>
</container>
