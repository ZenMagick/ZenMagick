<?xml version="1.0" ?>

<!-- http container -->
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <imports>
        <import resource="../../store/config/container.xml" />
    </imports>

    <services>

        <!-- TODO: drop when moving to using view instead of defaultView -->
        <service id="defaultView" alias="storeTemplateView" />

        <!-- redefine for storefront -->
        <service id="resourceResolverTwigLoader" class="zenmagick\http\templating\ResourceResolverTwigLoader" scope="prototype">
            <argument type="service" id="themeResourceResolver" />
        </service>

        <service id="ZMForwardView" class="ForwardView" scope="prototype" />
        <service id="forwardView" alias="ZMForwardView" />

        <service id="storeDefaultUrlRewriter" class="zenmagick\apps\storefront\http\request\StoreDefaultUrlRewriter">
            <tag name="zenmagick.http.request.rewriter" />
        </service>

        <service id="defaultRssFeedSource" class="zenmagick\apps\store\rss\DefaultRssFeedSource">
            <tag name="zenmagick.http.rss.source" />
        </service>

        <service id="catalogRssFeedSource" class="zenmagick\apps\store\rss\CatalogRssFeedSource">
            <tag name="zenmagick.http.rss.source" />
        </service>

        <service id="crumbtrailTool" class="zenmagick\apps\storefront\http\tools\ToolboxCrumbtrail" scope="prototype">
            <tag name="zenmagick.http.toolbox.tool" key="crumbtrail" />
        </service>

        <service id="metaTagsTool" class="zenmagick\apps\storefront\http\tools\ToolboxMetaTags" scope="prototype">
            <tag name="zenmagick.http.toolbox.tool" key="metaTags" />
        </service>

        <service id="defaultController" class="zenmagick\apps\storefront\controller\DefaultController" scope="prototype">
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="userFactory" class="zenmagick\apps\storefront\services\CustomerUserFactory" />
    </services>
</container>
