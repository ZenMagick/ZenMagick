<?xml version="1.0" ?>

<!-- http container -->
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="sessionHandler" class="Symfony\Component\HttpFoundation\Session\Storage\Handler\PdoSessionHandler" scope="container">
            <argument type="service" id="pdo" />
            <argument>%pdo.db_options%</argument>
        </service>

        <service id="storeEmailView" alias="storeTemplateView" />

        <!-- TODO: drop when moving to using view instead of defaultView -->
        <service id="defaultView" alias="templateView" />

        <service id="adminUserPrefService" class="zenmagick\apps\admin\services\AdminUserPrefService" scope="container" />

        <service id="adminUserRoleService" class="zenmagick\apps\admin\services\AdminUserRoleService" scope="container" />

        <service id="adminUserService" class="zenmagick\apps\admin\services\AdminUserService" scope="container" />

        <service id="sacsPermissionService" class="zenmagick\apps\admin\services\SacsPermissionService" scope="container" />

        <service id="session" class="zenmagick\http\session\Session" scope="container">
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
            <call method="setName">
                <argument>zmAdmin</argument>
            </call>
            <call method="registerSessionHandler">
                <argument type="service" id="sessionHandler" />
            </call>
            <call method="setUseFqdn">
                <argument>%zenmagick.http.session.useFqdn%</argument>
            </call>
        </service>

        <service id="plainEditorWidget" class="zenmagick\http\widgets\form\TextAreaFormWidget" scope="prototype">
            <tag name="zenmagick.apps.store.editor" label="Plain" />
        </service>

        <service id="adminMenu" class="zenmagick\apps\store\menu\Menu" scope="container" />

        <service id="catalogDefaultTabController" class="zenmagick\apps\admin\controller\CatalogDefaultTabController" scope="container">
            <tag name="apps.store.admin.tabcontroller" />
        </service>

        <service id="userFactory" class="zenmagick\apps\admin\services\AdminUserFactory" scope="container" />

        <service id="dashboard" class="zenmagick\apps\admin\dashboard\Dashboard" scope="container" />

        <service id="orderStatsDashboardWidget" class="zenmagick\apps\admin\dashboard\widgets\OrderStatsDashboardWidget" scope="prototype">
            <tag name="apps.store.admin.dashboard.widget" />
        </service>

        <service id="latestOrdersDashboardWidget" class="zenmagick\apps\admin\dashboard\widgets\LatestOrdersDashboardWidget" scope="prototype">
            <tag name="apps.store.admin.dashboard.widget" />
        </service>

        <service id="latestAccountsDashboardWidget" class="zenmagick\apps\admin\dashboard\widgets\LatestAccountsDashboardWidget" scope="prototype">
            <tag name="apps.store.admin.dashboard.widget" />
        </service>

        <service id="recentSearchesDashboardWidget" class="zenmagick\apps\admin\dashboard\widgets\RecentSearchesDashboardWidget" scope="prototype">
            <tag name="apps.store.admin.dashboard.widget" />
        </service>

        <service id="updateCheckerDashboardWidget" class="zenmagick\apps\admin\dashboard\widgets\UpdateCheckerDashboardWidget" scope="prototype">
            <tag name="apps.store.admin.dashboard.widget" />
        </service>

        <service id="pendingDashboardWidget" class="zenmagick\apps\admin\dashboard\widgets\PendingDashboardWidget" scope="prototype">
            <tag name="apps.store.admin.dashboard.widget" />
        </service>

        <service id="basicStatsDashboardWidget" class="zenmagick\apps\admin\dashboard\widgets\BasicStatsDashboardWidget" scope="prototype">
            <tag name="apps.store.admin.dashboard.widget" />
        </service>

        <service id="storeStatusDashboardWidget" class="zenmagick\apps\admin\dashboard\widgets\StoreStatusDashboardWidget" scope="prototype">
            <tag name="apps.store.admin.dashboard.widget" />
        </service>

        <service id="countrySelectFormWidget" class="zenmagick\apps\admin\widgets\CountrySelectFormWidget" scope="prototype">
            <tag name="zenmagick.http.widgets.widget" />
        </service>

        <service id="manufacturerSelectFormWidget" class="zenmagick\apps\admin\widgets\ManufacturerSelectFormWidget" scope="prototype">
            <tag name="zenmagick.http.widgets.widget" />
        </service>

        <service id="editorSelectFormWidget" class="zenmagick\apps\admin\widgets\EditorSelectFormWidget" scope="prototype">
            <tag name="zenmagick.http.widgets.widget" />
        </service>

        <service id="couponSelectFormWidget" class="zenmagick\apps\admin\widgets\CouponSelectFormWidget" scope="prototype">
            <tag name="zenmagick.http.widgets.widget" />
        </service>

        <service id="orderStatusSelectFormWidget" class="zenmagick\apps\admin\widgets\OrderStatusSelectFormWidget" scope="prototype">
            <tag name="zenmagick.http.widgets.widget" />
        </service>

        <service id="reservedQtyWidget" class="zenmagick\apps\admin\widgets\ReservedQtyWidget" scope="prototype">
            <tag name="zenmagick.http.widgets.widget" />
        </service>

        <service id="zoneSelectFormWidget" class="zenmagick\apps\admin\widgets\ZoneSelectFormWidget" scope="prototype">
            <tag name="zenmagick.http.widgets.widget" />
        </service>

        <service id="adminTool" class="zenmagick\apps\admin\http\tools\ToolboxAdmin" scope="prototype">
            <tag name="zenmagick.http.toolbox.tool" key="admin" />
        </service>

        <service id="themeBuilder" class="zenmagick\apps\admin\utils\ThemeBuilder" scope="prototype" />

        <service id="defaultController" class="zenmagick\apps\admin\controller\DefaultController" scope="prototype">
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="couponStatusCheck" class="zenmagick\apps\admin\dashboard\widgets\status\CouponStatusCheck" scope="prototype">
            <tag name="apps.store.admin.dashboard.widget.statusCheck" />
        </service>

        <service id="installationStatusCheck" class="zenmagick\apps\admin\dashboard\widgets\status\InstallationStatusCheck" scope="prototype">
            <tag name="apps.store.admin.dashboard.widget.statusCheck" />
        </service>

        <service id="miscStatusCheck" class="zenmagick\apps\admin\dashboard\widgets\status\MiscStatusCheck" scope="prototype">
            <tag name="apps.store.admin.dashboard.widget.statusCheck" />
        </service>

        <service id="moduleStatusCheck" class="zenmagick\apps\admin\dashboard\widgets\status\ModuleStatusCheck" scope="prototype">
            <tag name="apps.store.admin.dashboard.widget.statusCheck" />
        </service>
    </services>
</container>
