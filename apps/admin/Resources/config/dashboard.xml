<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="dashboard" class="ZenMagick\apps\admin\Dashboard\Dashboard" />

        <!-- Dashboard Widgets -->
        <service id="orderStatsDashboardWidget" class="ZenMagick\apps\admin\Dashboard\Widgets\OrderStatsDashboardWidget" scope="prototype">
            <tag name="apps.store.admin.dashboard.widget" />
        </service>
        <service id="latestOrdersDashboardWidget" class="ZenMagick\apps\admin\Dashboard\Widgets\LatestOrdersDashboardWidget" scope="prototype">
            <tag name="apps.store.admin.dashboard.widget" />
        </service>
        <service id="latestAccountsDashboardWidget" class="ZenMagick\apps\admin\Dashboard\Widgets\LatestAccountsDashboardWidget" scope="prototype">
            <tag name="apps.store.admin.dashboard.widget" />
        </service>
        <service id="recentSearchesDashboardWidget" class="ZenMagick\apps\admin\Dashboard\Widgets\RecentSearchesDashboardWidget" scope="prototype">
            <tag name="apps.store.admin.dashboard.widget" />
        </service>
        <service id="updateCheckerDashboardWidget" class="ZenMagick\apps\admin\Dashboard\Widgets\UpdateCheckerDashboardWidget" scope="prototype">
            <tag name="apps.store.admin.dashboard.widget" />
        </service>
        <service id="pendingDashboardWidget" class="ZenMagick\apps\admin\Dashboard\Widgets\PendingDashboardWidget" scope="prototype">
            <tag name="apps.store.admin.dashboard.widget" />
        </service>
        <service id="basicStatsDashboardWidget" class="ZenMagick\apps\admin\Dashboard\Widgets\BasicStatsDashboardWidget" scope="prototype">
            <tag name="apps.store.admin.dashboard.widget" />
        </service>
        <service id="storeStatusDashboardWidget" class="ZenMagick\apps\admin\Dashboard\Widgets\StoreStatusDashboardWidget" scope="prototype">
            <tag name="apps.store.admin.dashboard.widget" />
        </service>
        <!-- Status Check Widgets -->
        <service id="couponStatusCheck" class="ZenMagick\apps\admin\Dashboard\Widgets\Status\CouponStatusCheck" scope="prototype">
            <tag name="apps.store.admin.dashboard.widget.statusCheck" />
        </service>
        <service id="installationStatusCheck" class="ZenMagick\apps\admin\Dashboard\Widgets\Status\InstallationStatusCheck" scope="prototype">
            <tag name="apps.store.admin.dashboard.widget.statusCheck" />
        </service>
        <service id="miscStatusCheck" class="ZenMagick\apps\admin\Dashboard\Widgets\Status\MiscStatusCheck" scope="prototype">
            <tag name="apps.store.admin.dashboard.widget.statusCheck" />
        </service>
        <service id="moduleStatusCheck" class="ZenMagick\apps\admin\Dashboard\Widgets\Status\ModuleStatusCheck" scope="prototype">
            <tag name="apps.store.admin.dashboard.widget.statusCheck" />
        </service>
    </services>
</container>
