<?xml version="1.0" ?>

<!-- http container -->
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- TODO: drop when moving to using view instead of defaultView -->
        <service id="defaultView" alias="storeTemplateView" />

        <service id="crumbtrailTool" class="ZenMagick\StorefrontBundle\Http\Tools\ToolboxCrumbtrail" scope="prototype">
            <tag name="zenmagick.http.toolbox.tool" key="crumbtrail" />
        </service>

        <service id="metaTagsTool" class="ZenMagick\StorefrontBundle\Http\Tools\ToolboxMetaTags" scope="prototype">
            <tag name="zenmagick.http.toolbox.tool" key="metaTags" />
        </service>

        <service id="userFactory" class="ZenMagick\StorefrontBundle\Services\CustomerUserFactory" />
    </services>
</container>
