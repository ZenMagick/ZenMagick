<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="zencart.counter_listener" class="ZenMagick\ZenCartBundle\EventListener\CounterListener">
            <tag name="kernel.event_listener" event="kernel.terminate" method="countVisit" />
            <argument type="service" id="service_container" />
        </service>

        <service id="zencart.counter_dashboard_widget" scope="prototype" class="ZenMagick\ZenCartBundle\Dashboard\CounterHistoryWidget">
            <tag name="apps.store.admin.dashboard.widget" />
        </service>
    </services>
</container>
