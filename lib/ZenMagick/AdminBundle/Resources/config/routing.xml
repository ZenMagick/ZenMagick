<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <!-- global routes -->
    <route id="zenmagick_global_routing" pattern="^^">
        <option key="view:success">redirect://%routeId%</option>
        <option key="view:error">error.html.php?layout=</option>
        <option key="view:login-demo">redirect://admin_login</option>
        <option key="view:success-demo">redirect://admin_index</option>
    </route>

    <route id="about" pattern="/about">
        <default key="_controller">ZMController::process</default>
    </route>
    <route id="catalog" pattern="/catalog">
        <default key="_controller">ZenMagick\AdminBundle\Controller\CatalogController::process</default>
    </route>
    <route id="configuration" pattern="/configuration">
        <default key="_controller">ZMController::process</default>
    </route>
    <route id="dashboard" pattern="/index">
        <default key="_controller">ZMController::process</default>
    </route>
    <route id="fulfilment" pattern="/fulfilment">
        <default key="_controller">ZMController::process</default>
    </route>
    <route id="reports" pattern="/reports">
        <default key="_controller">ZMController::process</default>
    </route>
    <route id="tools" pattern="/tools">
        <default key="_controller">ZMController::process</default>
    </route>

    <route id="admin_login" pattern="/login">
        <default key="_controller">ZenMagick\AdminBundle\Controller\LoginController::process</default>
        <option key="view:logged-in">redirect://admin_index</option>
        <option key="view:success">redirect://admin_index</option>
    </route>
    <route id="admin_logoff" pattern="/logoff">
        <default key="_controller">ZenMagick\AdminBundle\Controller\LogoffController::process</default>
        <option key="view:success">redirect://admin_login</option>
    </route>
    <route id="admin_reset_password" pattern="/password/reset">
        <default key="_controller">ZenMagick\AdminBundle\Controller\ResetPasswordController::process</default>
        <option key="view:success">redirect://admin_login</option>
    </route>

    <route id="accounts" pattern="/accounts">
        <default key="_controller">ZenMagick\AdminBundle\Controller\AccountsController::process</default>
    </route>
    <route id="account_show" pattern="/account">
        <default key="_controller">ZenMagick\AdminBundle\Controller\AccountController::process</default>
    </route>
    <route id="update_user" pattern="/user/update">
        <default key="_controller">ZenMagick\AdminBundle\Controller\UpdateUserController::process</default>
        <option key="view:success">redirect://admin_index</option>
        <option key="form">ZenMagick\AdminBundle\Forms\AdminUserForm#formId=updateUser</option>
    </route>
    <route id="ezpages" pattern="/ezpages/{languageId}">
        <default key="_controller">ZenMagick\AdminBundle\Controller\EzpagesController::process</default>
        <default key="languageId">1</default>
        <option key="view">ezpages-overview.html.php</option>
    </route>
    <route id="ezpage" pattern="/ezpage">
        <default key="_controller">ZenMagick\AdminBundle\Controller\EzpagesController::process</default>
        <option key="view">ezpages-details.html.php</option>
        <option key="view:success">redirect://ezpages</option>
    </route>
    <route id="content_edit" pattern="/content">
        <default key="_controller">ZenMagick\AdminBundle\Controller\ContentEditorController::process</default>
        <default key="slug"></default>
        <option key="view">ezpages-details.html.php</option>
        <option key="view:success">redirect://content_editor</option>
    </route>
    <route id="content_editor" pattern="/content/{languageId}">
        <default key="_controller">ZenMagick\AdminBundle\Controller\ContentEditorController::process</default>
        <default key="languageId">1</default>
        <option key="view">content_overview.html.php</option>
    </route>

    <route id="legacy_config" pattern="/legacy_config">
        <default key="_controller">ZenMagick\AdminBundle\Controller\LegacyConfigController::process</default>
    </route>

    <route id="static_page_editor" pattern="/static_page_editor">
        <default key="_controller">ZMController::process</default>
    </route>

    <route id="themes" pattern="/themes">
        <default key="_controller">ZenMagick\AdminBundle\Controller\ThemesController::process</default>
    </route>

    <route id="theme_builder" pattern="/themes_builder">
        <default key="_controller">ZenMagick\AdminBundle\Controller\ThemeBuilderController::process</default>
    </route>

    <route id="block_groups" pattern="/block_groups">
        <default key="_controller">ZenMagick\AdminBundle\Controller\BlockGroupsController::process</default>
    </route>

    <route id="l10n" pattern="/l10n">
        <default key="_controller">ZenMagick\AdminBundle\Controller\L10nController::process</default>
    </route>

    <route id="installation" pattern="/installation">
        <default key="_controller">ZMController::process</default>
    </route>

    <route id="plugins" pattern="/plugins">
        <default key="_controller">ZenMagick\AdminBundle\Controller\PluginsController::process</default>
    </route>

    <route id="email_preview" pattern="/email_preview">
        <default key="_controller">ZenMagick\AdminBundle\Controller\EmailPreviewController::process</default>
    </route>

    <route id="cache_admin" pattern="/cache_admin">
        <default key="_controller">ZenMagick\AdminBundle\Controller\CacheAdminController::process</default>
    </route>

    <route id="admin_users" pattern="/admin_users">
        <default key="_controller">ZenMagick\AdminBundle\Controller\AdminUsersController::process</default>
    </route>
    <route id="manage_roles" pattern="/manage_roles">
        <default key="_controller">ZenMagick\AdminBundle\Controller\ManageRolesController::process</default>
    </route>

    <route id="edit_admin_user" pattern="/edit_admin_user">
        <default key="_controller">ZenMagick\AdminBundle\Controller\EditAdminUserController::process</default>
        <option key="view:success">redirect://admin_users</option>
        <option key="form">ZenMagick\AdminBundle\Forms\AdminUserForm#formId=adminUser</option>
    </route>

    <!-- used in some payment modules -->
    <route id="checkout_process" pattern="/checkout/process">
        <default key="_controller">ZenMagick\ZenCartBundle\Controller\StorefrontController::process</default>
    </route>

    <route id="ipn_main_handler" pattern="/ipn">
        <default key="_controller">ZenMagick\ZenCartBundle\Controller\StorefrontController::process</default>
    </route>

    <route id="contact_us" pattern="/contact-us">
        <default key="_controller">ZenMagick\StorefrontBundle\Controller\ContactUsController::process</default>
        <option key="form">ZMContactInfo#formId=contactUs</option>
        <option key="view">contact_us.html.php</option>
        <option key="view:success">redirect://contact_us</option>
    </route>
    <!-- used in some payment modules -->

    <import resource="." type="context" />
    <import resource="@ZenCartBundle/Resources/config/admin/routing.xml" />
    <route id="admin_index" pattern="/">
        <default key="_controller">ZMController::process</default>
    </route>

</routes>
