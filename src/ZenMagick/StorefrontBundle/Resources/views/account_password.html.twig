{% extends '@Storefront/layout.html.twig' %}
{% block crumbtrail macro.buildCrumbTrail(crumbtrail.addCrumb('Account'|trans, path('account')).addCrumb('Change Password'|trans))|raw %}
{% block body %}
    {{ form.open('account_password', '', true, {'id' : 'account_password'})|raw }}
        <fieldset>
            <legend>{{ 'Change Password'|trans }}</legend>
            <p>
                <label for="password_current">{{ 'Current Password'|trans }}</label>
                <input type="password" id="password_current" name="password_current" {{ form.fieldLength('customers', 'customers_password')|raw }} />
            </p>
            <p>
                <label for="password_new">{{ 'New Password'|trans }}</label>
                <input type="password" id="password_new" name="password_new" {{ form.fieldLength('customers', 'customers_password')|raw }} />
            </p>
            <p>
                <label for="password_confirmation">{{ 'Confirm Password'|trans }}</label>
                <input type="password" id="password_confirmation" name="password_confirmation" {{ form.fieldLength('customers', 'customers_password')|raw }} />
            </p>
        </fieldset>
        <div class="btn">
            <input type="submit" class="btn" value="{{ 'Submit'|trans }}"/>
        </div>
    </form>
{% endblock %}
