{% extends '@Storefront/layout.html.twig' %}
{% block crumbtrail macro.buildCrumbTrail(crumbtrail.addCrumb('Account'|trans, path('account')).addCrumb('Addresses'|trans, path('address_book')).addCrumb('Delete'|trans))|raw %}
{% block body %}
    <p>
        {{ 'Are you sure you would like to delete the selected address from your address book?'|trans }}
    </p>
    {{ form.open('address_book_delete', '', true, {'onsubmit' : null})|raw }}
        <fieldset>
            <legend>{{ 'Selected Address'|trans }}</legend>
            <div class="btn">
                <input type="hidden" name="id" value="{{ address.id }}" />
                <input type="submit" class="btn" value="{{ 'Delete'|trans }}" />
            </div>
            {{ macro.formatAddress(address)|raw }}
        </fieldset>
    </form>
{% endblock %}
