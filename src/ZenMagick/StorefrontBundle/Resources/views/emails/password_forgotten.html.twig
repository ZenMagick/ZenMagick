<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html lang="{{ language.code }}">
<head>
    <title>{{ 'New Password Request - %store_name%'|trans({'%store_name%' : settings.get('storeName')}) }}</title>
</head>
<body>
    <div style="font-family:Verdana,Arial,Helvetica,sans-serif;font-size:10pt;">
        <p>{{ 'New Password Request'|trans }}</p>
        <p>{{ 'This is in response to a request for a new password for your account at %store_name%.'|trans({'%store_name%' : settings.get('storeName')}) }}</p>
        <p>{{ 'Your new password is: %password%'|trans({'%password%' : password}) }}</p>
        <p>{{ 'For security reasons please remember to change your password next time you logon.'|trans }}</p>
        <p>{{ 'Regards, %store_name%'|trans({'%store_name%' : settings.get('storeName')}) }}</p>

        {{ utils.staticPageContent('email_advisory')|raw }}
    </div>
</body>
</html>
